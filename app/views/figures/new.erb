<h1>Create a New Figure</h1>
<form action="/figures/" method="POST">
  <label for="Name">Name:</label><input type="text" name="figure[name]" id="figure_name"><br>
<br><br>

  <label><strong>Titles</strong></label><br>
  <% @titles.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
    <%= title.name %><br>
  <% end %>
  <br><br>

  <h3>Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title"><br>
  <br><br>

  <label><strong>Landmarks</strong></label><br>
  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <%= landmark.name %><br>
  <% end %>
  <br><br>

  <h3>Create New Landmark:</h3>
  <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label><input type="text" name="landmark[year]" id="new_landmark_year"><br>
<br>
  <input type="submit" value="Create New Figure">
</form>
