<h1>Edit <%= @figure.name%></h1>

<form action="/figures/<%= @figure.id%>" method="POST">
  <!-- <input id="hidden" type="hidden" name="_method" value="PATCH"> -->

  <label><strong>Name:</strong></label><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name%>"><br>
<br><br>

  <label><strong>Titles</strong></label><br>
  <em>Choose from an Existing Title</em><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
    <%= title.name %><br>
  <% end %>
  <br><br>

  <h3>Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title"><br>
  <br><br>

  <label><strong>Landmarks</strong></label><br>
  <em>Choose from an Existing Landmark</em><br>
  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <%= landmark.name %><br>
  <% end %>
  <br><br>

  <h3>Create New Landmark:</h3>
  <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label><input type="text" name="landmark[year]" id="new_landmark_year"><br>
<br>
  <input type="submit" value="Edit Figure">
</form>
